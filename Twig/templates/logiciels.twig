{% extends "article.twig" %}

{# Main #}
{% block articleAside %}
	{# Aside contenant tous les articles avec une ancre pour scroll #}
	<ul>
		{% for article in articles %}
			<li>
				<a href="#{{ article.titre|replace({' ': ''}) }}">{{ article.titre }}</a>
			</li>
		{% endfor %}
	</ul>
{% endblock %}

{% block articleSection %}

    <h1>Les logiciels pour faire de la Color Bass</h1>

    {# Une boucle pour afficher chaque article #}
	{% for article in articles %}
	<article id="{{ article.titre|replace({' ': ''}) }}">
		<h2>{{ article.titre }}</h2>
		<q cite="{{ article.lien }}">{{ article.q }}</q>
		<p>{{ article.presentation }}</p>
		<figure>
			<img src="./img/logiciels/{{ article.img }}.jpg" alt="Interface logiciel {{ article.titre }}">
			<figcaption>Interface du logiciel {{ article.titre }}</figcaption>
		</figure>
		<p>{{ article.titre }} contient une variété de fonctionnalités pour la production musicale:</p>
		<dl>
            {% for feature in article.features %}
                <dt>{{ feature[0] }}:</dt>
                <dd>{{ feature[1] }}</dd>
            {% endfor %}
		</dl>
		<button data-clickredirecthref="{{ article.lien }}">Visiter leur site</button>
	</article>
	{% endfor %}

{% endblock %}
