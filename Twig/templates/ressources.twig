{% extends "article.twig" %}

{# Main #}
{% block articleAside %}
	{# Boucle for pour ajouter chaque article en forme de lien avec une ancre pour scroll #}
	<ul>
		{% for article in articles %}
			<li>
				{# L'ancre sera juste le nom de l'article sans espace #}
				<a href="#{{ article.titre|replace({' ': ''}) }}">{{ article.titre }}</a>
			</li>
		{% endfor %}
	</ul>
{% endblock %}

{% block articleSection %}

    <h1>{{ traduction.h1 }}</h1>

    {# Une boucle pour afficher chaque article #}
	{% for article in articles %}
	<article id="{{ article.titre|replace({' ': ''}) }}">
		<h2>{{ article.titre }}</h2>
		<ul>
			{# Cr√©er la liste a puce automatiquement #}
            {% for li in article.listePuce %}
                <li><a target="_blank" href="{{ li[1] }}">{{ li[0] }}</a></li>
            {% endfor %}
		</ul>
	</article>
	{% endfor %}

{% endblock %}
